<h1>Viewing Party</h1>

<% if current_user %>
   <h2>Welcome, <%= current_user.name %></h2>
   <%= button_to 'Log Out', class: "btn btn-lg btn-outline-secondary" %>
<% else %>
   <%= button_to 'Create New User', register_user_path, method: :get, class: "btn btn-lg btn-outline-secondary" %><br>
   <%= link_to 'Log In', login_path, method: :get, class: "btn btn-lg btn-outline-secondary" %>
<% end %>

<h2>Existing Users</h2>
<ul id="existing_users">
   <% @users.each do |user| %>
      <li><%= link_to user.email, "users/#{user.id}" %></li>
   <% end %>
</ul>